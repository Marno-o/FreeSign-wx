<!--pages/organize/organize.wxml-->

<view>
  <!-- 标题 -->
  <view class="formHead">
    <view class="fsttitle">新建场景</view>
    <view class="secondtitle">组织者：{{}}</view>
  </view>

  <!-- 表格内容 -->
  <view class="formContent">
    <form bindsubmit=" ">
      <!-- swiper组件 -->
      <swiper current="{{currentTab}}" vertical="true" style="height:{{height}}px" duration="350" easing-function="linear">
        <!-- 第一页 -->
        <swiper-item class="fstpage" style="height:{{height}}px">
          <!-- 场景主题 -->
          <view class="itemStyle">
            <view class="section__title">场景主题</view>
            <input name="input" placeholder="例：XXX会议" />
          </view>

          <!-- 定时任务 -->
          <view class="itemStyle">
            <view class="section__title">定时任务
              <switch name="switch" style="float:right;height:100%" checked="{{ifdelay}}" bindchange="ifdelay" />
            </view>

            <view wx:if="{{ifdelay}}">
              <view>选择时间：</view>
              <view class="section__title">时间选择器</view>
              <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                <view class="picker">当前选择: {{time}}</view>
              </picker>
              <view class="section__title">日期选择器</view>
              <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                <view class="picker"> 当前选择: {{date}}</view>
              </picker>
            </view>

            <view wx:else>
              <view>未选择即默认为现在开始</view>
            </view>
          </view>

          <!-- 预计时长 -->
          <view class="itemStyle">
            <view class="section__title">预计时长： {{timelong}}分钟</view>
            <slider name="slider" style="padding-left: 10rpx;padding-right:10rpx" bindchanging="settimelong" min="30" max="120" step="30" value="{{timelong}}"></slider>
          </view>

          <!-- 签到方式 -->
          <view class="itemStyle">
            <view class="section__title">签到方式
              <radio-group name="radio-group" style="padding-left: 10rpx;padding-right:10rpx;float:right;font-weight:normal;">
                <label style="margin-right:15px">
                  <radio value="bybluetooth" checked="true" />蓝牙信标</label>
                <label>
                  <radio value="bynfc" />NFC</label>
              </radio-group>
            </view>
          </view>

          <!-- 切换swiper按钮 -->
          <view style="position:fixed;bottom:80rpx;left:0;right:0">
            <button bindtap="nextstep" data-current="1">下一步：选择信标</button>
          </view>
        </swiper-item>

        <!-- 第二页 -->
        <swiper-item class="secondpage" style="height:{{height}}px">

          <!-- 选择了蓝牙 -->
          <view wx:if="{{bt}}" class="itemStyle">
            <view class="section__title" style="text-align:center;">{{motto}}</view>
          </view>

          <!-- 选择了nfc -->
          <view wx:else  class="itemStyle">
          </view>

          <!-- 提交 -->
          <view class="btn-area">
            <button formType="submit" style="position:fixed;bottom:80rpx;left:0;right:0">提交</button>
          </view>
        </swiper-item>
      </swiper>
    </form>
  </view>
</view>