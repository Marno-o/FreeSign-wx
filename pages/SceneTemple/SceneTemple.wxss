/* pages/organize/organize.wxss */

page {
  background-color: #58b8bd;
}

.formHead {
  padding-top: 60rpx;
  padding-bottom: 40rpx;
  padding-left: 80rpx;
}

.headPic {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.sceneTitle {
  padding-left: 170rpx;
  padding-top: 50rpx;
}

.fsttitle {
  font-size: 45rpx;
  font-weight: bold;
}

.secondtitle {
  font-size: 30rpx;
}

.formContent {
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.topInSwiper {
  margin-top: 0;
}

.itemStyle {
  margin: 20rpx;
  margin-bottom: 30rpx;
  background-color: rgb(250, 250, 250);
  border-radius: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-shadow: 5rpx 5rpx 20rpx 0rpx rgba(0, 64, 128, 0.2);
  transition: box-shadow 0.3s;
}

.section__title {
  font-size: 40rpx;
  font-weight: bold;
  height: 38px;
  line-height: 38px;
}

.cont {
  margin: 15rpx;
}

.hr {
  background: #58b8bd;
  width: 100%;
  height: 5rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.onePart {
  margin-bottom: 10rpx;
}

.title {
  font-weight: bold;
  line-height: 38px;
}

.picker {
  text-align: center;
}

.titleSwitch {
  float: right;
  height: 100%;
}

.titleRadio {
  padding-left: 10rpx;
  padding-right: 10rpx;
  float: right;
  font-weight: normal;
}
